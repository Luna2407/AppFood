<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/img_food"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        ></ImageView>
    <TextView
        android:id="@+id/name_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="NAME"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_food"
        ></TextView>

    <TextView
        android:id="@+id/des_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_food"
        android:text="Description"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="#acacac"
        android:padding="10dp"
        android:layout_below="@+id/name_food"

        ></TextView>

    <TextView
        android:id="@+id/monney_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_food"
        android:text="25.000 vnd"
        android:textSize="19dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/des_food"
        android:layout_alignBottom="@id/img_food"
        ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_add_24"
            android:text="ThÃªm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/antic"
            android:layout_alignBottom="@id/monney_food"
            ></TextView>
</RelativeLayout>